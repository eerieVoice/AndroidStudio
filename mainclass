package com.example.agricultool;

import androidx.appcompat.app.AppCompatActivity;

import android.content.Intent;
import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.ImageButton;

public class MainActivity extends AppCompatActivity {
    private Button button;
    private ImageButton imageFruit, imageVegetable, imageIndoor, imageOutdoor;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        imageFruit = (ImageButton) findViewById(R.id.imageFruit);
        imageVegetable = (ImageButton) findViewById(R.id.imageVegetable);
        imageIndoor = (ImageButton) findViewById(R.id.imageIndoor);
        imageOutdoor = (ImageButton) findViewById(R.id.imageOutdoor);


        imageFruit.setOnClickListener(new View.OnClickListener(){
            public void  onClick(View v){
                openFruit();
            }
        });
        imageVegetable.setOnClickListener(new View.OnClickListener(){
            public void  onClick(View v){
                openVegetable();
            }
        });
        imageIndoor.setOnClickListener(new View.OnClickListener(){
            public void  onClick(View v){
                openIndoor();
            }
        });
        imageOutdoor.setOnClickListener(new View.OnClickListener(){
            public void  onClick(View v){
                openOutdoor();
            }
        });
    }
    public void openFruit(){
        Intent intent = new Intent(this, Fruit.class);
        startActivity(intent);
    }
    public void openVegetable(){
        Intent intent = new Intent(this, Vegetable.class);
        startActivity(intent);
    }
    public void openIndoor(){
        Intent intent = new Intent(this, Indoor.class);
        startActivity(intent);
    }
    public void openOutdoor(){
        Intent intent = new Intent(this, Outdoor.class);
        startActivity(intent);
    }
}
